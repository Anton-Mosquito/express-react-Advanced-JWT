{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": ".",
    "outDir": "dist",
    "strict": true,
    "lib": ["esnext"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*", "*.ts", "controllers/**/*", "dtos/**/*", "exceptions/**/*", "middleware/**/*", "models/**/*", "route/**/*", "service/**/*"],
  "exclude": ["node_modules"]
}
