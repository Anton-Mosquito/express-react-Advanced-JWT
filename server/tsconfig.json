{
  "compilerOptions": {
    "target": "es2020",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "baseUrl": ".",
    "outDir": "dist",
    "strict": true,
    "lib": ["esnext"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*",
    "*.ts",
    "controllers/**/*",
    "dtos/**/*",
    "exceptions/**/*",
    "middleware/**/*",
    "models/**/*",
    "route/**/*",
    "service/**/*",
    "config/**/*",
    "types/**/*"
  ],
  "exclude": ["node_modules"]
}
